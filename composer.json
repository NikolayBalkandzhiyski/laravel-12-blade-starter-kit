{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "nikolaybalkandzhiyski/laravel-12-blade-starter-kit",
    "type": "library",
    "description": "A Laravel 12 starter kit with Blade templates and authentication",
    "keywords": [
        "laravel",
        "blade",
        "starter kit",
        "authentication"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nikolay Balkandzhiyski",
            "email": "nikolay.balkandzhiyski@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/filesystem": "^12.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "NikolayBalkandzhiyski\\BladeStarterKit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "NikolayBalkandzhiyski\\BladeStarterKit\\ComposerScripts::postAutoloadDump"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('./artisan') && exec('php artisan key:generate --ansi')\"",
            "@php -r \"file_exists('./artisan') && exec('php artisan blade-kit:install')\"",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "NikolayBalkandzhiyski\\BladeStarterKit\\ServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
